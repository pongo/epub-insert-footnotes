{
  "name": "epub-insert-footnotes",
  "version": "2.0.0",
  "description": "",
  "type": "module",
  "main": "src/main.ts",
  "imports": {
    "#src/*.js": "./src/*.ts",
    "#test/*.js": "./test/*.ts",
    "#src/*": "./src/*.ts",
    "#test/*": "./test/*.ts"
  },
  "scripts": {
    "start": "node --experimental-strip-types src/main.ts",
    "tscheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "cov": "vitest run --coverage",
    "update_snapshot": "vitest run -u"
  },
  "keywords": [],
  "author": "pongo",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "cheerio": "^0.22.0",
    "escape-html": "^1.0.3",
    "escape-string-regexp": "^2.0.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/cheerio": "^0.22.16",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf",
    "printWidth": 120
  }
}
