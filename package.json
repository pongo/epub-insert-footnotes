{
  "name": "epub-insert-footnotes",
  "version": "1.2.0",
  "description": "",
  "type": "module",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "node dist/src/main.js",
    "build": "rimraf dist/* && tsc --newLine lf",
    "tscheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "cov": "vitest run --coverage",
    "update_snapshot": "vitest run -u"
  },
  "keywords": [],
  "author": "pongo",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "cheerio": "^0.22.0",
    "escape-html": "^1.0.3",
    "escape-string-regexp": "^2.0.0",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/cheerio": "^0.22.16",
    "@types/escape-html": "^1.0.4",
    "@types/node": "^20.17.17",
    "@vitest/coverage-v8": "^4.0.18",
    "open-cli": "^5.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf",
    "printWidth": 120,
    "overrides": [
      {
        "files": [
          ".eslintrc.js"
        ],
        "options": {
          "singleQuote": false,
          "quoteProps": "consistent"
        }
      }
    ]
  },
  "_moduleAliases": {
    "src": "./dist/src",
    "test": "./dist/test"
  }
}
