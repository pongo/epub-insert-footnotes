{
  "name": "epub-insert-footnotes",
  "version": "1.2.0",
  "description": "",
  "main": "dist/src/main.js",
  "scripts": {
    "start": "node dist/src/main.js",
    "build": "rimraf dist/* && tsc --newLine lf",
    "tscheck": "tsc --noEmit",
    "test": "jest -i --silent",
    "test:watch": "jest -i --watch --forceExit",
    "cov": "jest -i --coverage --no-cache --silent && open-cli ./coverage/lcov-report/index.html",
    "open_cov": "open-cli ./coverage/lcov-report/index.html",
    "jest_update_snapshot": "jest --updateSnapshot"
  },
  "keywords": [],
  "author": "pongo",
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "cheerio": "^0.22.0",
    "escape-html": "^1.0.3",
    "escape-string-regexp": "^2.0.0",
    "module-alias": "^2.2.2"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/cheerio": "^0.22.16",
    "@types/escape-html": "^1.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.17.17",
    "jest": "^29.7.0",
    "open-cli": "^5.0.0",
    "prettier": "^3.4.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "endOfLine": "lf",
    "printWidth": 120,
    "overrides": [
      {
        "files": [
          ".eslintrc.js"
        ],
        "options": {
          "singleQuote": false,
          "quoteProps": "consistent"
        }
      }
    ]
  },
  "jest": {
    "bail": true,
    "collectCoverage": false,
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!**/node_modules/**"
    ],
    "roots": [
      "<rootDir>/test/",
      "<rootDir>/src/"
    ],
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globals": {
      "ts-jest": {
        "diagnostics": false,
        "isolatedModules": true
      }
    }
  },
  "jest--del": {
    "testRegex": "(/test/.*\\.test\\.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "_moduleAliases": {
    "src": "./dist/src",
    "test": "./dist/test"
  }
}
